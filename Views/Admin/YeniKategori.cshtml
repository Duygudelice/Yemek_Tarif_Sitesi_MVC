@model YemekTarif.Models.sınıflar.Kategori 
@{
    ViewBag.Title = "YeniKategori";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>YeniKategori</h2>

<form class="form-group" method="post">
    @Html.LabelFor(x => x.KategoriAd)
    @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Adet)
    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Tarifi Ekle</button>
